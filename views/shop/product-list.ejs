<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>
<body>

    <%- include('../includes/navigation.ejs') %>
    <main class="main-wrapper">
        <h1>Browse Products</h1>
        <% if(products.length > 0) { %>
        <div class="grid">
            <% for(let p of products) { %>
                <article class="card product-item">
                    
                    <header class="card__header">
                        <h1 class="product__title"><%=p.title%></h1>
                    </header>
                    
                    <div class="card__image">
                        <img src="<%=p.imageUrl%>" alt="<%=p.title%>">
                    </div>
                    
                    <div class="card__content">
                        <h2 class="product__price">$<%= p.price %></h2>
                        <p class="product__description"><%= p.description %></p>
                    </div>

                    <div class="card__actions">
                        <button><a href="/products/details/<%=p._id%>" >Details</a></button>
                        
                        <%- include('../includes/add-to-cart.ejs',{product: p}) %>
                    </div>

                </article>
            <% } %>
            <% } else { %>
                <h1>No products yet!</h1>
            <% } %>
        </div>
        <%- include('../includes/pagination.ejs') %>
    </main>
<%- include('../includes/end.ejs') %>