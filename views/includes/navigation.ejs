<header class="main-header">
    <nav class="main-header__nav">
        <ul class="main-header__item-list">
            <li class="main-header__item">
                <a id="<%= path=== '/' ? 'active-link' : '' %>" href="/">Home</a>
            </li>
            <li class="main-header__item">
                <a id="<%= path=== '/products' ? 'active-link' : '' %>" href="/products">Products</a>
            </li>
            <% if(isAuthenticated){ %>
                <li class="main-header__item">
                    <a id="<%= path=== '/cart' ? 'active-link' : '' %>" href="/cart">Cart</a>
                </li>
                <li class="main-header__item">
                    <a id="<%= path=== '/orders' ? 'active-link' : '' %>" href="/orders">Orders</a>
                </li>
            
                <li class="main-header__item">
                    <a id="<%= path === '/admin' ? 'active-link' : '' %>" href="/admin/add-product">Add Product</a>
                </li>
                <li class="main-header__item">
                    <a id="<%= path === '/admin/products' ? 'active-link' : '' %>" href="/admin/products">Admin Products</a>
                </li>  
            <%}%>
        </ul>

        <ul class="main-header__item-list">
            <%if(!isAuthenticated){%>
            <li class="main-header__item">
                <a id="<%= path === '/login' ? 'active-link' : '' %>" href="/login">Login</a>
            </li>
            <li class="main-header__item">
                <a id="<%= path === '/register' ? 'active-link' : '' %>" href="/signup">Signup</a>
            </li>
            <%} else {%>
            <li class="main-header__item">
                <form method="POST" action="/logout">
                    <input type="hidden" value="<%=csrfToken%>" name="_csrf">
                    <button type="submit">Sign out</button>
                </form>
            </li>
            <%}%>
        </ul>
    </nav>
</header>

